div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-12(ng-if="resetToken")
      h1 We've sent help to {{user.email}}.
      p This reset will expire in 24 hours.
      p {{resetUrl}}
      p
        a(href="/loginhelp/{{resetToken}}") /loginhelp/{{resetToken}}
      div
        a.btn.btn-default.btn-lg.btn-register(href='/signup')
          | Sign Up For Free!
        a.btn.btn-default.btn-lg.btn-register(href='/login')
          | Login
    .col-sm-12(ng-if="!resetToken")
      h1 Login Help
      p
        | Tell us your email ad we'll send you info to help login.
      p(ng-if="resetError") {{resetError}}
      form.form(name='form', ng-submit='accountHelp(form)', novalidate='')
        .form-group
          label Email
          input.form-control(type='text', name='email', placeholder="What is your email address?", ng-model='user.email')
        .form-group.has-error
          p.help-block(ng-show='form.email.$error.required && submitted')
            | Please enter your email.
          p.help-block {{ errors.other }}
        div
          button.btn.btn-inverse.btn-lg.btn-login(type='submit')
            | Reset
          = ' '
            a.btn.btn-default.btn-lg.btn-register(href='/signup')
              | Sign Up For Free!
            a.btn.btn-default.btn-lg.btn-register(href='/login')
              | Login
        hr
        div
          a.btn.btn-facebook(href='', ng-click='loginOauth("facebook")')
            i.fa.fa-facebook
            | Connect with Facebook
          = ' '
            a.btn.btn-google-plus(href='', ng-click='loginOauth("google")')
              i.fa.fa-google-plus
              | Connect with Google+
          = ' '
            a.btn.btn-twitter(href='', ng-click='loginOauth("twitter")')
              i.fa.fa-twitter
              | Connect with Twitter
  hr
